<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/upload_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/upload_TV_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD OUTFIT"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.15"
            android:textAllCaps="true" />

        <View
            android:layout_width="35dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:background="#FF4081" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/upload_header_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/upload_CV_image_container"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/upload_IV_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:padding="110dp"
                    android:src="@drawable/ic_add_photo"
                    android:background="#F8F8F8" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_vibe"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Vibe"
                app:layout_constraintTop_toBottomOf="@id/upload_CV_image_container">
                <AutoCompleteTextView
                    android:id="@+id/upload_ACTV_vibe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_top"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Top"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_vibe">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_bottom"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Bottom"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_top">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_jacket"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Jacket"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_jacket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_shoes"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Shoes"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_jacket">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_shoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_jewelry"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Jewelry"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_shoes">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_jewelry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_sunglasses"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Sunglasses"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_jewelry">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_sunglasses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/upload_TIL_bag"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Bag"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_sunglasses">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/upload_ET_bag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upload_BTN_upload"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="SHARE OUTFIT"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:textColor="#FFFFFF"
                app:backgroundTint="#000000"
                app:cornerRadius="30dp"
                app:layout_constraintTop_toBottomOf="@id/upload_TIL_bag"
                app:layout_constraintBottom_toTopOf="@id/upload_animation"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/upload_animation"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/loading_fashion"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upload_BTN_upload" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>