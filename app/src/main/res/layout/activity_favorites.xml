<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/fav_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/fav_TV_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY FAVORITES"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.15"
            android:textAllCaps="true" />

        <View
            android:layout_width="35dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:background="#FF4081" /> </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fav_RV_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/fav_header_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_outfit" />

</androidx.constraintlayout.widget.ConstraintLayout>